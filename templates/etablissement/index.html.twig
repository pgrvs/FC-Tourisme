{% extends 'base.html.twig' %}

{% block title %}Etablissements{% endblock %}

{% block body %}
<h1 class="text-center mb-4">Etablissements</h1>
    <div class="row justify-content-between custom-line">
    {% for etablissement in etablissements %}
        <div class="card mx-auto mt-2 p-0" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{ etablissement.nom }}</h5>
                <p class="card-text">{{ etablissement.description |slice(0, 75) }}...</p>
                <div class="alert alert-success" role="alert">
                    <ul class="list-group">
                        {% for categorie in etablissement.categorie %}
                            <li class="list-group-item">{{ categorie.nom | capitalize}}</li>
                        {% endfor %}
                    </ul>
                </div>
                <p class="card-text">
                    <i class="bi bi-geo-alt"></i>
                    {{ etablissement.ville.codePostal}} {{ etablissement.ville.nom | lower | capitalize }}
                </p>
            </div>
            <div class="card-footer d-flex justify-content-end">
                <a href="{{ path('app_etablissements_slug', {'slug': etablissement.slug}) }}" class="btn btn-outline-success">Voir</a>
            </div>
        </div>
    {% endfor %}
    </div>
    <div class="navigation m-3 d-flex justify-content-center">
        {{ knp_pagination_render(etablissements) }}
    </div>

{% endblock %}
